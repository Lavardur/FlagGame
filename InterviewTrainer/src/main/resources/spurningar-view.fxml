<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="hi.verkefni.vidmot.SpurningarController" spacing="20" alignment="CENTER">
    <Label text="Veldu spurningaflokk:" styleClass="title-text"/>
    <HBox spacing="20">
        <ListView fx:id="categoryListView" prefWidth="200" prefHeight="250"/>
        <ListView fx:id="questionListView" prefWidth="350" prefHeight="250"/>
    </HBox>
    <Button text="Svara" fx:id="answerButton" onAction="#handleAnswerButtonAction"/>
    <Button text="Hætta" fx:id="exitButton" onAction="#handleExitButtonAction"/>
    <Button text="Til baka" fx:id="backButton" onAction="#handleBackButtonAction"/>
    <Label fx:id="answeredQuestionsLabel" text="Fjöldi svaraðra spurninga: 0"/>
    <ScrollPane>
        <TextArea fx:id="answeredQuestionsLog" editable="false"/>
    </ScrollPane>
</VBox>