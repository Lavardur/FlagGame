<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="hi.verkefni.vidmot.SvarDialogController" spacing="20" alignment="CENTER">
    <Label fx:id="questionLabel" text="Svarðu spurningunni:" styleClass="title-text"/>
    <TextArea fx:id="answerTextArea" wrapText="true" prefHeight="150" prefWidth="400"/>
    <Label fx:id="feedbackLabel" text="" />
    <Button text="Í lagi" fx:id="submitButton" onAction="#handleSubmit"/>
    <Button text="Hætta" fx:id="cancelButton" onAction="#handleCancel"/>
</VBox>