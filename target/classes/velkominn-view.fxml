<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="420.0" spacing="20" styleClass="welcome-background" stylesheets="@flag-game.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.verkefni.vidmot.VelkominnController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="welcome-title" text="Flag Guessing Game">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Text>
      
      <ImageView fx:id="flagImageView" fitHeight="160.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@flags/is.png" />
         </image></ImageView>
      
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="welcome-subtitle" text="Test your knowledge of world flags">
         <font>
            <Font size="16.0" />
         </font>
      </Text>
      <Button fx:id="spurningarButton" onAction="#handleSpurningarButtonAction" styleClass="welcome-button" text="Start Game" />
      <Button fx:id="haettaButton" onAction="#handleHaettaButtonAction" styleClass="welcome-button-secondary" text="Exit" />
   </children>
</VBox>
