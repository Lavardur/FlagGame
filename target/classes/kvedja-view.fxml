<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="500.0" spacing="30" styleClass="welcome-background" 
      stylesheets="@flag-game.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" 
      fx:controller="hi.verkefni.vidmot.KvedjaController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label styleClass="welcome-title" text="Thank you for playing!">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <ImageView fx:id="flagImageView" fitHeight="120.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" />
      
      <Label styleClass="welcome-subtitle" text="Hope to see you again soon!">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      
      <Button fx:id="closeButton" onAction="#handleClose" styleClass="welcome-button" text="Exit" />
   </children>
</VBox>
