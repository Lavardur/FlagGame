<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="420.0" spacing="30" styleClass="welcome-background" stylesheets="@flag-game.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.verkefni.vidmot.KvedjaController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label styleClass="welcome-title" text="Thank you for playing!" textAlignment="CENTER" wrapText="true" />
      
      <ImageView fx:id="flagImageView" fitHeight="160.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@flags/is.png" />
         </image></ImageView>
      
      <Label styleClass="welcome-subtitle" text="Hope to see you again soon!">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      
      <Button fx:id="closeButton" onAction="#handleClose" styleClass="welcome-button" text="Exit" />
   </children>
</VBox>
